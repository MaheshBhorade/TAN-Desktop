<UserControl x:Class="TAN.Views.HomeView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:TAN.Views"
             
             xmlns:controls="clr-namespace:TAN.Controls"
             xmlns:lvc="clr-namespace:LiveCharts.Wpf;assembly=LiveCharts.Wpf"
             mc:Ignorable="d"
             d:DesignHeight="600"
             d:DesignWidth="1000">

    

    <Grid Background="#b7babf">
        <Grid.ColumnDefinitions>
            <ColumnDefinition  Width="4*" />
            <ColumnDefinition Width="1*"
                              MinWidth="200" />

        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition />

        </Grid.RowDefinitions>

        <ScrollViewer VerticalScrollBarVisibility="Auto"
                      HorizontalScrollBarVisibility="Auto">

            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="1.25*" />
                    <RowDefinition Height="1*" />
                    <RowDefinition Height="0.25*" />
                </Grid.RowDefinitions>
                <Grid>

                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="2*" />
                        <ColumnDefinition Width="1.15*" />

                    </Grid.ColumnDefinitions>

                    <Border BorderThickness="1"
                            CornerRadius="5"
                            Background="#ffffff"
                            Margin="30 30 15 15"
                            BorderBrush="Transparent">

                        <Grid Margin="10">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="1*" />
                                <ColumnDefinition Width="1.25*" />
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="1*" />
                                <RowDefinition Height="5*" />
                            </Grid.RowDefinitions>
                            <DockPanel Grid.ColumnSpan="2">
                                <DockPanel Height="30">
                                    <Path Height="20"
                                          Data="M284 779h60V504h-60v275Zm166 0h60V373h-60v406Zm166 0h60V631h-60v148Zm77-328v-87h-88v-60h88v-88h60v88h87v60h-87v87h-60ZM180 936q-24 0-42-18t-18-42V276q0-24 18-42t42-18h395v205q0 24.75 17.625 42.375T635 481h205v395q0 24-18 42t-42 18H180Z"
                                          Stretch="Uniform"
                                          StrokeThickness="1.5"
                                          Stroke="#f79f1f"
                                          Width="20"
                                          Margin="5 0 0 0">

                                    </Path>
                                    <TextBlock Text="Sale"
                                               Margin="10 0 0 0"
                                               FontSize="22"
                                               FontWeight="Medium"
                                               FontFamily="/Themes/Fonts/CalibriRegular.ttf #Calibri"
                                               VerticalAlignment="Center"
                                               HorizontalAlignment="Left"></TextBlock>
                                    <ComboBox x:Name="SaleCombo"
                                              HorizontalAlignment="Right"
                                              Width="100"
                                              Margin="7"></ComboBox>

                                </DockPanel>
                            </DockPanel>

                            <StackPanel Grid.Row="1">

                                <DockPanel>
                                    <StackPanel Orientation="Horizontal">
                                        <StackPanel Height="auto"
                                                    Width="auto">


                                            <TextBlock x:Name="Saletotaltextblock"
                                                       Text="1526300"
                                                       FontFamily="/Themes/Fonts/CalibriBold.ttf #Calibri"
                                                       FontSize="32"
                                                       Margin="10 40 0 0"></TextBlock>

                                            <TextBlock x:Name="TotalSaleMonth"
                                                       Text="Total Sale"
                                                       Foreground="#a9afba"
                                                       FontSize="18"
                                                       Margin="10 0 0 0"></TextBlock>

                                            <controls:GrowthDirectionControl Margin="10 30 0 0" x:Name="MonthGrowth" />



                                            <TextBlock Text="This Month Growth"
                                                       FontSize="16"
                                                       Margin="10 0 0 0"
                                                       Foreground="#a9afba"></TextBlock>

                                        </StackPanel>
                                        <DockPanel></DockPanel>

                                    </StackPanel>
                                </DockPanel>

                            </StackPanel>
                            <Grid Grid.Row="1" Grid.Column="1">
                                <lvc:CartesianChart Series="{Binding SeriesCollection}"  >
                                    <lvc:CartesianChart.AxisY>
                                        <lvc:Axis  ShowLabels="False" LabelFormatter="{Binding YFormatter}"></lvc:Axis>
                                    </lvc:CartesianChart.AxisY>
                                    <lvc:CartesianChart.AxisX>
                                        <lvc:Axis  ShowLabels="False"  Labels="{Binding Labels}"></lvc:Axis>
                                    </lvc:CartesianChart.AxisX>
                                </lvc:CartesianChart>
                            </Grid>
                        </Grid>
                    </Border>

                    <Border BorderThickness="1"
                            CornerRadius="5"
                            Background="#ffffff"
                            Grid.Column="1"
                            Margin="15 30 30 15"
                            BorderBrush="Transparent">
                        <DockPanel>

                        </DockPanel>
                    </Border>



                </Grid>


                <Grid Grid.Row="1">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition />
                        <ColumnDefinition />
                        <ColumnDefinition />
                    </Grid.ColumnDefinitions>

                    <Border MinHeight="220"
                            MinWidth="220"
                            BorderThickness="1"
                            CornerRadius="5"
                            Grid.Column="0"
                            Background="#ffffff"
                            Margin="30 15 15 15"
                            BorderBrush="Transparent">
                        <DockPanel Margin="10">
                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="1*"/>
                                    <RowDefinition Height="1*"/>
                                    <RowDefinition Height="0.5*" />
                                    <RowDefinition Height="5*"/>

                                    
                                    
                                </Grid.RowDefinitions>
                                <DockPanel Grid.Row="0">
                                    <Path Height="20"
                                          Data="M440-800v487L216-537l-56 57 320 320 320-320-56-57-224 224v-487h-80Z"
                                          Stretch="Uniform"
                                          
                                          Fill="#16c184"
                                          
                                          Width="20"
                                          Margin="5 0 5 0">

                                    </Path>
                                    <TextBlock
                                        Text="You'll Receive"
                                        Foreground="#676a79"
                                        FontSize="20"
                                        />


                                </DockPanel>
                                <DockPanel Grid.Row="1">
                                    
                                    <TextBlock 
                                        x:Name="Receivetotaltextblock"
                                       Text="1526300"
                                       FontSize="24"
                                        FontWeight="Bold"
                                       Margin="30 0 0 0"></TextBlock>
                                </DockPanel>
                                <DockPanel Grid.Row="2">
                                    
                                </DockPanel>
                                <Button Grid.Row="3"
                                        HorizontalAlignment="Stretch"
                                        VerticalAlignment="Stretch"
                                        Style="{StaticResource MyButtonStyle}"
                                        >
                                    <Grid Margin="10 5">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="150"/>
                                            <ColumnDefinition />
                                        </Grid.ColumnDefinitions>
                                        <Grid.RowDefinitions>
                                            <RowDefinition/>
                                            <RowDefinition/>
                                            <RowDefinition/>
                                            <RowDefinition/>
                                        </Grid.RowDefinitions>
                                        
                                        <DockPanel>
                                            <TextBlock x:Name="ReceiveNameTextBlock1" 
                                                       FontSize="16"
                                                       Foreground="#9aa1ae"
                                                       TextTrimming="CharacterEllipsis"
                                                       />
                                        </DockPanel>
                                        <DockPanel Grid.Row="1">
                                            <TextBlock x:Name="ReceiveNameTextBlock2" 
                                                       FontSize="16"
                                                       Foreground="#9aa1ae"
                                                       TextTrimming="CharacterEllipsis"
                                                       />
                                        </DockPanel>
                                        <DockPanel Grid.Row="2">
                                            <TextBlock x:Name="ReceiveNameTextBlock3" 
                                                       FontSize="16"
                                                       Foreground="#9aa1ae"
                                                       TextTrimming="CharacterEllipsis"
                                                       />
                                        </DockPanel>

                                        <DockPanel Grid.Column="1" HorizontalAlignment="Right">
                                            <TextBlock x:Name="ReceiveAmountTextBlock1" 
                                                       FontSize="16"
                                                       Foreground="#32c892"/>
                                        </DockPanel>
                                        <DockPanel Grid.Column="1" Grid.Row="1" HorizontalAlignment="Right">
                                            <TextBlock x:Name="ReceiveAmountTextBlock2" 
                                                       FontSize="16"
                                                       Foreground="#32c892"/>
                                        </DockPanel>
                                        <DockPanel Grid.Column="1" Grid.Row="2" HorizontalAlignment="Right">
                                            <TextBlock x:Name="ReceiveAmountTextBlock3" 
                                                       FontSize="16"
                                                       Foreground="#32c892"/>
                                        </DockPanel>
                                        <DockPanel Grid.Column="0" Grid.ColumnSpan="2" Grid.Row="3">
                                            <TextBlock x:Name="Moretotaltextblock"
                                                    Text="more"
                                                    FontSize="16"
                                                    TextAlignment="Center"
                                                    Foreground="#9aa1ae"
                                                    Margin="10 10 0 0"/>
                                        </DockPanel>
                                    </Grid>
                                </Button>
                                
                            </Grid>
                        </DockPanel>
                    </Border>
                    
                    <Border MinHeight="220"
                            MinWidth="220"
                            BorderThickness="1"
                            CornerRadius="5"
                            Grid.Column="1"
                            Background="#ffffff"
                            Margin="15 15 15 15"
                            BorderBrush="Transparent">
                        <DockPanel Margin="10">
                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="1*"/>
                                    <RowDefinition Height="1*"/>
                                    <RowDefinition Height="0.5*" />
                                    <RowDefinition Height="5*"/>



                                </Grid.RowDefinitions>
                                <DockPanel Grid.Row="0">
                                    <Path Height="20"
                                          Data="M440-160v-487L216-423l-56-57 320-320 320 320-56 57-224-224v487h-80Z"
                                          Stretch="Uniform"
                  
                                          Fill="#f26647"
                  
                                          Width="20"
                                          Margin="5 0 5 0">

                                    </Path>
                                    <TextBlock
                                        Text="You'll Pay"
                                        Foreground="#676a79"
                                        FontSize="20"
                                        />


                                </DockPanel>
                                <DockPanel Grid.Row="1">

                                    <TextBlock 
                                           x:Name="Paytotaltextblock"
                                          Text="1526300"
                                          FontSize="24"
                                           FontWeight="Bold"
                                          Margin="30 0 0 0"></TextBlock>
                                </DockPanel>
                                <DockPanel Grid.Row="2">

                                </DockPanel>
                                <Button Grid.Row="3"
                                        HorizontalAlignment="Stretch"
                                        VerticalAlignment="Stretch"
                                        Style="{StaticResource MyButtonStyle}"
                                        >
                                    <Grid Margin="10 5">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="150"/>
                                            <ColumnDefinition />
                                        </Grid.ColumnDefinitions>
                                        <Grid.RowDefinitions>
                                            <RowDefinition/>
                                            <RowDefinition/>
                                            <RowDefinition/>
                                            <RowDefinition/>
                                        </Grid.RowDefinitions>

                                        <DockPanel>
                                            <TextBlock x:Name="PayNameTextBlock1" 
                                                FontSize="16"
                                                Foreground="#9aa1ae"
                                                TextTrimming="CharacterEllipsis"
                                                />
                                        </DockPanel>
                                        <DockPanel Grid.Row="1">
                                            <TextBlock x:Name="PayNameTextBlock2" 
                                                FontSize="16"
                                                Foreground="#9aa1ae"
                                                TextTrimming="CharacterEllipsis"
                                                />
                                        </DockPanel>
                                        <DockPanel Grid.Row="2">
                                            <TextBlock x:Name="PayNameTextBlock3" 
                                                FontSize="16"
                                                Foreground="#9aa1ae"
                                                TextTrimming="CharacterEllipsis"
                                                />
                                        </DockPanel>

                                        <DockPanel Grid.Column="1" HorizontalAlignment="Right">
                                            <TextBlock x:Name="PayAmountTextBlock1" 
                                                FontSize="16"
                                                Foreground="#f2684a"/>
                                        </DockPanel>
                                        <DockPanel Grid.Column="1" Grid.Row="1" HorizontalAlignment="Right">
                                            <TextBlock x:Name="PayAmountTextBlock2" 
                                                FontSize="16"
                                                Foreground="#f2684a"/>
                                        </DockPanel>
                                        <DockPanel Grid.Column="1" Grid.Row="2" HorizontalAlignment="Right">
                                            <TextBlock x:Name="PayAmountTextBlock3" 
                                                FontSize="16"
                                                Foreground="#f2684a"/>
                                        </DockPanel>
                                        <DockPanel Grid.Column="0" Grid.ColumnSpan="2" Grid.Row="3">
                                            <TextBlock x:Name="MorePaytextblock"
                                                    Text="more"
                                                    FontSize="16"
                                                    TextAlignment="Center"
                                                    Foreground="#9aa1ae"
                                                    Margin="10 10 0 0"/>
                                        </DockPanel>
                                    </Grid>
                                </Button>

                            </Grid>
                        </DockPanel>
                    </Border>
                    
                    <!--Purchase BOx-->
                    <Border MinHeight="220"
                            MinWidth="220"
                            BorderThickness="1"
                            CornerRadius="5"
                            Grid.Column="2"
                            Background="#ffffff"
                            Margin="15 15 30 15"
                            BorderBrush="Transparent">
                        <DockPanel Margin="10">
                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="1*"/>
                                    <RowDefinition Height="1*"/>
                                    <RowDefinition Height="0.5*" />
                                    <RowDefinition Height="5*"/>



                                </Grid.RowDefinitions>
                                <DockPanel Grid.Row="0">
                                    

                                    <Path Height="20"
                                            Data="M286.788 975Q257 975 236 953.788q-21-21.213-21-51Q215 873 236.212 852q21.213-21 51-21Q317 831 338 852.212q21 21.213 21 51Q359 933 337.788 954q-21.213 21-51 21Zm400 0Q657 975 636 953.788q-21-21.213-21-51Q615 873 636.212 852q21.213-21 51-21Q717 831 738 852.212q21 21.213 21 51Q759 933 737.788 954q-21.213 21-51 21ZM205 255h589.074q22.964 0 34.945 21Q841 297 829 318L694 561q-11 19-28.559 30.5Q647.881 603 627 603H324l-56 104h491v60H277q-42 0-60.5-28t.5-63l64-118-152-322H51v-60h117l37 79Z"
                                            Stretch="Uniform"
                                            Fill="#19aaf1"

                                            Width="20"
                                            Margin="5 0 5 0"/>
                                    <TextBlock
                                        Text="Purchase"
                                        Foreground="#676a79"
                                        FontSize="20"
                                        />


                                </DockPanel>
                                <DockPanel Grid.Row="1">

                                    <TextBlock 
                                           x:Name="Purchasetotaltextblock"
                                          Text="1526300"
                                          FontSize="24"
                                           FontWeight="Bold"
                                          Margin="30 0 0 0"></TextBlock>
                                </DockPanel>
                                <DockPanel Grid.Row="2">

                                </DockPanel>
                                <Button Grid.Row="3"
                                        HorizontalAlignment="Stretch"
                                        VerticalAlignment="Stretch"
                                        Style="{StaticResource MyButtonStyle}"
                                        >
                                    <Grid Margin="10 5">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="150"/>
                                            <ColumnDefinition />
                                        </Grid.ColumnDefinitions>
                                        <Grid.RowDefinitions>
                                            <RowDefinition/>
                                            <RowDefinition/>
                                            <RowDefinition/>
                                            <RowDefinition/>
                                        </Grid.RowDefinitions>

                                        <DockPanel>
                                            <TextBlock x:Name="PurchaseNameTextBlock1" 
                                                        FontSize="16"
                                                        Foreground="#9aa1ae"
                                                        TextTrimming="CharacterEllipsis"
                                                        />
                                        </DockPanel>
                                        <DockPanel Grid.Row="1">
                                            <TextBlock x:Name="PurchaseNameTextBlock2" 
                                                        FontSize="16"
                                                        Foreground="#9aa1ae"
                                                        TextTrimming="CharacterEllipsis"
                                                        />
                                        </DockPanel>
                                        <DockPanel Grid.Row="2">
                                            <TextBlock x:Name="PurchaseNameTextBlock3" 
                                                    FontSize="16"
                                                    Foreground="#9aa1ae"
                                                    TextTrimming="CharacterEllipsis"
                                                    />
                                        </DockPanel>

                                        <DockPanel Grid.Column="1" HorizontalAlignment="Right">
                                            <TextBlock x:Name="PurchaseAmountTextBlock1" 
                                                        FontSize="16"
                                                        Foreground="#32c892"/>
                                        </DockPanel>
                                        <DockPanel Grid.Column="1" Grid.Row="1" HorizontalAlignment="Right">
                                            <TextBlock x:Name="PurchaseAmountTextBlock2" 
                                                        FontSize="16"
                                                        Foreground="#32c892"/>
                                        </DockPanel>
                                        <DockPanel Grid.Column="1" Grid.Row="2" HorizontalAlignment="Right">
                                            <TextBlock x:Name="PurchaseAmountTextBlock3" 
                                                        FontSize="16"
                                                        Foreground="#32c892"/>
                                        </DockPanel>
                                        <DockPanel Grid.Column="0" Grid.ColumnSpan="2" Grid.Row="3">
                                            <TextBlock x:Name="MorePurchasetextblock"
                                                        Text="more"
                                                        FontSize="16"
                                                        TextAlignment="Center"
                                                        Foreground="#9aa1ae"
                                                        Margin="10 10 0 0"/>
                                        </DockPanel>
                                    </Grid>
                                </Button>

                            </Grid>
                        </DockPanel>
                    </Border>
                </Grid>

            </Grid>
        </ScrollViewer>

        <ScrollViewer Grid.Column="1"
                      VerticalScrollBarVisibility="Auto">
            <Grid>
            </Grid>
        </ScrollViewer>
    </Grid>
</UserControl>
